<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_query_button_focused" />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/color_query_button_default" />
            <corners android:radius="@dimen/rounded_corner_radius" />
        </shape>
    </item> <!-- pressed -->
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/color_query_button_default" />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/color_query_button_default" />
            <corners android:radius="@dimen/rounded_corner_radius" />
        </shape>
    </item> <!-- enabled -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/color_query_button_passive" />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/color_query_button_default" />
            <corners android:radius="@dimen/rounded_corner_radius" />
        </shape>
    </item> <!-- disabled -->
</selector>